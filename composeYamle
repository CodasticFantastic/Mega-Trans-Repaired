version: '3.8'
services:
  mysql_megatrans:
    container_name: mysql_megatrans
    porst: 
      - "3306:3306"
    image: mysql:8.0
    restart: always
    environment:
      MYSQL_DATABASE: megatrans
      MYSQL_ROOT_PASSWORD: root
    volumes: 
      - mysql_megatrans:/var/lib/mysql
  
  prisma:
    links:
      - mysql_megatrans
    depends_on:
      - mysql_megatrans
    container_name: prisma_megatrans
    ports:
     - '5555:5555' 
    build:
      context: ./prisma
      dockerfile: Dockerfile
    volumes:
      - /app/prisma
  
  nextJs_megatrans:
    container_name: nextJs_megatrans
    links:
      - mysql_megatrans
    depends_on:
      - mysql_megatrans
      - prisma
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    volumes:
      - .:/app
      - /app/node_modules
      - /app/.next
volumes:
  mysql_megatrans: